<center><h1 style="font-family:copperplate; color:#393E46; margin-top: 50px;" class="mb-4">Horario de Clases</h1></center>

<div class="position-relative">
  <div class="position-absolute top-0 start-100 translate-middle">
    <div class="contenedor-icono" style="margin-right:400px; margin-top: 1px;">
    <a type="button" href="/horario" class="btn btn-default btn-circle btn-xl"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
    </svg></a>   
    </div>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-md-8">
        <table  class="table" style="background:#ffff; font-size:large; font-family:courier new" >
      <thead>
        <tr>
          <th scope="col">Hora</th>
          <th scope="col">Lunes</th>
          <th scope="col">Martes</th>
          <th scope="col">Miercoles</th>
          <th scope="col">Jueves</th>
          <th scope="col">Viernes</th>
        </tr>
      </thead>
      <tbody>
          {{#each list}}
        <tr>
          <td>{{this.Hora}}</td>
          <td>{{this.Lunes}}</td>
          <td>{{this.Martes}}</td>
          <td>{{this.Miercoles}}</td>
          <td>{{this.Jueves}}</td>
          <td>{{this.Viernes}}</td>
          <td> 
            <a href="/horario/{{this._id}}" aria-pressed="true">
            <svg xmlns="http://www.w3.org/2000/svg" style="color:#929AAB;"  width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
              <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
            </svg></a>
            <a href="/horario/delete/{{this._id}}"
              onclick="return confirm('¿Esta seguro de que desea eliminar el registro?');"
              class="btn btn-light btn-lg" style="background: #EEEEEE;" role="button" aria-pressed="true">Eliminar</a>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>


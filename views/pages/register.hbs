<style>
    body {
        
        background-color: #c6d8ff ;
    }
</style>
<br>
<br>
<center><h1 style="font-family:copperplate; color:#0D1E96 " class="mb-4">REGISTER</h1></center>

<div class="row justify-content-md-center">
    <div class="col-md-4">
        {{#if message}}
            <div class="alert {{messageClass}}">
                {{message}}
            </div>
        {{/if}}
        <form action="/register" method="POST">
            <div class="form-group" style="font-family:courier new; color:#0D1E96; font-weight: bold">
                Nombre de Usuario
                <input type="text" name="fullName" id="" class="form-control" placeholder="Nombre de Usuario" style="background-color:#F5F6FF ;color:#0D1E96" required>
            </div>
            <br>
            <div class="form-group" style="font-family:courier new; color:#0D1E96; font-weight: bold">
                Email
                <input type="text" name="email" id="" class="form-control" placeholder="nombre@example.com" style="background-color:#F5F6FF;  color:#0D1E96" required>
            </div>
            <br>
            <div class="form-group" style="font-family:courier new; color:#0D1E96; font-weight: bold">
                Password
                <input type="password" name="password" id="" class="form-control" placeholder="****" style="background-color:#F5F6FF;  color:#0D1E96" required>
            </div>
            <br>
            <div class="form-group" style="font-family:courier new; color:#0D1E96; font-weight: bold">
                Confirm Password
                <input type="password" name="confirmPassword" id="" class="form-control" placeholder="****" style="background-color:#F5F6FF; border-color:#FFFFFF; color:#0D1E96" required>
            </div>
            <br>
            <center><button type="submit" class="btn btn-lg" style="font-family:optima; background-color:#FF6D00; color:#FFFFFF">Register</button></center>
        </form>
    </div>
</div>